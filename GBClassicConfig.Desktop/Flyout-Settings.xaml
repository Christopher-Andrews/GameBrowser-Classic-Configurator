                </controls:Tile.Background>
            </controls:Tile>
            <!-- EndRegion -->
        </WrapPanel>
        <!-- EndRegion -->

        <!-- Notification settings header... -->
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Notification Settings" FontSize="20" Foreground="Black" Width="240" Height="30" VerticalAlignment="Top" Margin="10,245,0,0" Background="#FFF300FF"/>

        <!-- Toasts header... -->
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Toasts" FontSize="14" Foreground="Black" Width="240" Height="20" VerticalAlignment="Top" Margin="10,285,0,0" Background="#FFF300FF"/>

        <!-- Toasts toggle switch... -->
        <controls:ToggleSwitch x:Name="ToastToggle" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" FontFamily="Segoe UI" ToolTip="Toggle toast notifications" Width="240" Height="30" Margin="10,310,0,0" Foreground="Black" BorderThickness="0" Checked="ToastToggle_Checked" IsCheckedChanged="ToastToggle_IsCheckedChanged"/>

        <!-- Version info... -->
        <TextBlock x:Name="VersionText" TextAlignment="Center" Foreground="Black" Margin="10,0,10,4" Height="20" VerticalAlignment="Bottom"><Run Text="** Version text goes here **"/></TextBlock>
        <Separator HorizontalAlignment="Left" Height="10" Margin="10,230,0,0" VerticalAlignment="Top" Width="240"/>
    </Grid>
    <!-- end region-->

